{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}


{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editando Funcionario</h4>
        <form action="/admin/funcionario/edit", method="POST">
            <input type="hidden" value="{{funcionario._id}}" name="id">
            <label for="name">Nome: </label>
                <input type="text" name="name" class="form-control" value="{{funcionario.name}}" required>
            <label for="birthdate">Data de nascimento: </label>
                <input type="date" name="birthdate" class="form-control" max="2020-01-01" value="{{funcionario.birthdate}}" required>
            <label for="admission_date">Data de admiss√£o: </label>
                <input type="date" name="admission_date" class="form-control" value="{{funcionario.admission_date}}" required>
            <label for="job_role">Cargo: </label>
                <input type="text" name="job_role" class="form-control" value="{{funcionario.job_role}}" required>
    
            <label for="projeto">Projetos: </label>
            <select name="projeto" class="form-control">
                {{#each projetos}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum projeto registrado</option>
                {{/each }}
            </select>
            <br>
            <button class="btn btn-success" type="submit">Editar funcionario</button>
        </form>
    </div>
</div>