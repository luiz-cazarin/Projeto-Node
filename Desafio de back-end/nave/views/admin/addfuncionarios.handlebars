{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}


{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Novo Funcionario</h4>
        <form action="/admin/funcionarios/novo", method="POST">
            <label for="name">Nome: </label>
                <input type="text" name="name" class="form-control" required>
            <label for="birthdate">Data de nascimento: </label>
                <input type="date" name="birthdate" class="form-control" max="2020-01-01" required>
            <label for="admission_date">Data de admiss√£o: </label>
                <input type="date" name="admission_date" class="form-control" required>
            <label for="job_role">Cargo: </label>
                <input type="text" name="job_role" class="form-control" required>
    
            <label for="projeto">Projetos: </label>
            <select name="projeto" class="form-control">
                {{#each projetos}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    
                {{/each }}
            </select>
            <br>
            <button class="btn btn-success" type="submit">Criar funcionario</button>
        </form>
    </div>
</div>

